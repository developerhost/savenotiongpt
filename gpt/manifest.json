{

  "manifest_version": 2,
  "name": "GPT Save to Notion",
  "version": "0.0.5",

  "description": "Save semantic web page data to notion.so.",

  "icons": {
    "48": "icons/ico-48.png",
    "96": "icons/ico-96.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "index.js"
      ]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "*://api.notion.com/*",
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  // firefoxブラウザ固有の設定
  "browser_specific_settings": {
    "gecko": {
      "id": "{5f284c22-5863-4fb6-b523-9fb4ce1061dc}",
      "strict_min_version": "65.0"
    }
  }
}